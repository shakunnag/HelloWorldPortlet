<?xml version="1.0" encoding="UTF-8" ?>
<ff4j xmlns="http://www.ff4j.org/schema/ff4j" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.ff4j.org/schema/ff4j http://ff4j.org/schema/ff4j-1.4.0.xsd">

	<features>

		<!-- Will be "ON" if enable is set as true -->
		<feature uid="myFeature" enable="true" description="This is my first feature" />
		<feature uid="anotherFeature" enable="false"
			description="This is my first feature" />

		<!-- Features can be grouped to be toggled in the same time -->
		<feature-group name="sprint_3">
			<feature uid="userStory3_1" enable="true"
				description="This is my userStory3_1 feature" />
			<feature uid="userStory3_2" enable="false"
				description="This is my userStory3_2 feature" />
			<feature uid="userStory3_3" enable="true"
				description="This is my userStory3_3 feature" />
			<feature uid="userStory3_4" enable="true"
				description="This is my userStory3_4 feature" />
			<feature uid="userStory3_5" enable="false"
				description="This is my userStory3_5 feature" />
		</feature-group>

	</features>
</ff4j>